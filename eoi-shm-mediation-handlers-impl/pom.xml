         <exclusions>
            <exclusion>
               <groupId>*</groupId>
               <artifactId>modeling-annotation-processor-jar</artifactId>
            </exclusion>
         </exclusions>
      </dependency>
      <dependency>
          <groupId>com.ericsson.oss.mediation.cm.handlers</groupId>
