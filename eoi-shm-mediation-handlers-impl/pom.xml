         <artifactId>cba-netconf-datatype-converter-jar</artifactId>
         <version>${cba-netconf-manager.version}</version>
      </dependency>
      <dependency>
         <groupId>com.ericsson.oss.mediation.util.netconf</groupId>
         <artifactId>cba-netconf-mediation-api</artifactId>
         <version>${netconf.version}</version>
         <scope>provided</scope>
      </dependency>
      <dependency>
         <groupId>com.ericsson.oss.mediation.cba.handlers</groupId>
         <artifactId>cba-cm-sync-node-handlers-util</artifactId>
         <version>${cba-cm-sync-node-handlers.jar.version}</version>
        <scope>provided</scope>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>service-framework-dist</artifactId>
                </exclusion>
            </exclusions>
      </dependency>
      <dependency>
          <groupId>com.ericsson.oss.itpf.common</groupId>
          <artifactId>PlatformIntegrationBridge-ear</artifactId>
          <version>${version.pib}</version>
          <type>ear</type>
          <scope>test</scope>
      </dependency>
      <dependency>
         <groupId>com.ericsson.oss.itpf.modeling</groupId>
         <artifactId>model-service-api-jar</artifactId>
         <scope>provided</scope>
      </dependency>
      <dependency>
          <groupId>com.ericsson.oss.itpf.common.flow</groupId>
          <artifactId>eventflow-api</artifactId>
          <version>${version.eventflow.api}</version>
      </dependency>
      <dependency>
          <groupId>com.ericsson.aia.itpf.common.flow</groupId>
