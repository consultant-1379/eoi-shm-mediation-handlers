          <version>${version.eventflow}</version>
      </dependency>
      <dependency>
          <groupId>javax.ejb</groupId>
          <artifactId>javax.ejb-api</artifactId>
          <version>${version.javax.ejb}</version>
          <scope>provided</scope>
    </dependency>
    <dependency>
        <groupId>com.ericsson.oss.itpf.datalayer.dps</groupId>
